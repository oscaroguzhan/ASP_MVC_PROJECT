@{
    ViewData["Title"] = "Projects";
}

<div id="projects" class="page">
    <div class="page-header">
        <h1>Projects</h1>
        <button class="btn" data-type="modal" data-target="#add-project-modal" type="button">
            <i class="fa-duotone fa-solid fa-plus"></i>
            <span class="btn-span">Add Project</span>
        </button>
    </div>
    <section class="project-list">
       @await Html.PartialAsync("ListItems/_ProjectListItemPartial")
       
    </section>
</div>

<!-- Include modals -->
@await Html.PartialAsync("Modals/_AddProjectModalPartial")
@await Html.PartialAsync("Modals/_EditProjectModalPartial")